<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fixedPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed pH"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/fixedDO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="127dp" />

    <Button
        android:id="@+id/fixedDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed DO"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/fixedEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixedPH"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="196dp" />

    <Button
        android:id="@+id/fixedEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed EC"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/variablePH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixedDO"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/variablePH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Variable pH"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/variableDO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixedEC"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="315dp" />

    <Button
        android:id="@+id/variableDO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Variable DO"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/variableEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/variablePH"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="391dp" />

    <Button
        android:id="@+id/variableEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Variable EC"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/variableDO"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="439dp" />
</android.support.constraint.ConstraintLayout>